.add_article
  = link_to action_button('Add Article', 'fa-plus'), new_article_path, class: 'btn btn-default'

%hr

%ul
  - @articles.each do |article|
    %li
      = link_to article.title, article_path(article)
      = link_to content_tag(:i, '', class: "fa fa-trash-o"), article_path(article), class: 'delete_article', data: { method: :delete, confirm: 'Are you sure?', remote: true }