.row
  %h2.col-xs-12.text-center
    Sign up

  = form_for resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form', class: 'col-xs-12' } do |f|
    = devise_error_messages!

    .form-group
      = f.email_field :email, placeholder: 'Email...', class: 'form-control'

    .form-group
      = f.password_field :password, autocomplete: 'off', placeholder: 'Password...', class: 'form-control'

    .form-group
      = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Password confirmation...', class: 'form-control'

    .form-group
      = f.submit 'Sign up', class: 'btn btn-primary col-xs-12'
