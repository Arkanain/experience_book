%tr
  %td.username
    = user.email
  %td.buttons
    .action
      = link_to action_button('View', 'fa-search'), user, class: 'button success'

    .action
      = link_to action_button('Edit', 'fa-pencil-square-o'), [:edit, user], class: 'button warning'

    .action
      = link_to action_button('Delete', 'fa-trash-o'), user, class: 'button alert', data: { method: :delete, confirm: 'Are you sure?', remote: true }